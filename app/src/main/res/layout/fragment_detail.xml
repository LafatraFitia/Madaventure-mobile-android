<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/web_1920x24"
                android:layout_width="wrap_content"
                android:layout_height="434dp"
                android:background="@drawable/antananarivo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titre"
                android:layout_width="278dp"
                android:layout_height="73dp"
                android:fontFamily="@font/audiowide_regular"
                android:gravity="center_horizontal|center_vertical"
                android:text="Antananarivo"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/web_1920x24" />

            <TextView
                android:id="@+id/detail"
                android:layout_width="389dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_display_regular"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="6sp"
                android:text="Antananarivo, la pétillante capitale de Madagascar, vous invite à plonger dans la vie malgache avec ses rues animées, ses marchés colorés et sa cuisine exquise. Explorez cette ville vibrante pour vivre une immersion authentique au cœur de Madagascar."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titre" />

            <TextView
                android:id="@+id/activiteTitle"
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:gravity="center_vertical"
                android:text="Activités"
                android:textSize="25sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail" />

            <RelativeLayout
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activiteTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/activity_randonee" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
