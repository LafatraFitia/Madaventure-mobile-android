<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProvinceFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Row -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province"
                android:textSize="30sp"
                android:padding="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu"
                android:textSize="30sp"
                android:padding="10dp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Row 1 -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tana"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antsirabe, Ampefy"
                android:padding="10dp" />

            <Button
                android:id="@+id/voirplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voir plus" />


        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Majunga"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antsanitia, Katsepy"
                android:padding="10dp" />
        </TableRow>

        <!-- You can add more rows following the same pattern -->
    </TableLayout>


</FrameLayout>