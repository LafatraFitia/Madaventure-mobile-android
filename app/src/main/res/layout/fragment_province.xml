<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProvinceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="169dp"
            android:layout_height="172dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/logo_groupe" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Row -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Province"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Lieu"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </TableRow>

            <!-- Row 1 -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Tana" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Antsirabe, Ampefy" />

                <Button
                    android:id="@+id/voirplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir plus" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Majunga" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Antsanitia, Katsepy" />
            </TableRow>

            <!-- You can add more rows following the same pattern -->
        </TableLayout>
    </LinearLayout>


</FrameLayout>